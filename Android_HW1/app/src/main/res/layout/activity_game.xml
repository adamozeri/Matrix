<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/game_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_LL_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_leftPlayer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/new_kid"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_centerPlayer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/new_kid"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_rightPlayer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/new_kid"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/game_FAB_leftArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/arrow"
            app:iconTint="@color/teal_200"
            app:backgroundTint="#1B747C"
            android:rotation="180"
            app:iconSize="30dp"
            android:layout_marginStart="100dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/game_FAB_rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/arrow"
            app:iconTint="@color/teal_200"
            app:backgroundTint="#1B747C"
            app:iconSize="30dp"
            android:layout_marginEnd="100dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/game_LL_player"
        android:layout_marginTop="75dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/game_LL_obstacleCol1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/game_LL_obstacleCol2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/game_LL_obstacleCol3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/matrix_color"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>